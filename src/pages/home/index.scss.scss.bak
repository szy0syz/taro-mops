@import "../../styles/mixin";
.home-page {
    @include wh(100%, 100%);
    .nav-list {
        min-height: 430px;
        @include fj(center);
        flex-wrap: wrap;
        margin-top: 20px;
        .nav-item {
            width: 23%;
            margin: 0 5px;
        }
    }
    .recommend {
        display: block;
        width: 100%;
        text-align: center;
        margin: 30px 0;
        font-size: 36px;
    }
    .upper-area {
        width: 100%;
        height: 64%;
        background: url('http://cdn.jerryshi.com/picgo/20181027103851.png') no-repeat;
        background-position: bottom;
        background-size: cover;
        position: relative;
        .at-search-bar {
            background-color: #1fb7a6;
        }
        .title-column {
            position: absolute;
            width: 100%;
            height: 17%;
            bottom: 0;
            z-index: 10;
            background: rgba(0, 0, 0, 0.1);
            color: #fff;
            font-size: 26rpx;
            display: flex;
            .item-stats {
                display: flex;
                flex-direction: column;
                justify-content: center;
                text-align: center;
            }
            &>View {
                height: 82%;
                width: 33.33%;
                padding-top: 12rpx;
            }
            .column-lable {
                color: #eee;
                margin-top: 6rpx;
                font-size: 26rpx;
            }
            .item-text {
                display: flex;
                View {
                    width: 50%;
                    display: flex;
                    flex-direction: column;
                    justify-content: center;
                    align-content: center;
                    text-align: center;
                    border-left: 1px solid #fff;
                    &:last-child {
                        border-right: 1px solid #fff;
                    }
                }
            }
        }
        .at-search-bar__action {
            background-color: #21b5a9;
        }
    }
    .grid-menu {
        display: flex;
        justify-content: space-around;
        height: 280rpx;
        padding-top: 20rpx;
        &>View {
            margin-bottom: 12rpx;
            text-align: center;
            width: 30%;
            .menu-text {
                color: #797979;
                width: 100%;
                text-align: center;
                margin-top: 14rpx;
                font-size: 28rpx;
            }
            .menu-icon {
                display: inline-block;
                margin-top: 14rpx;
                width: 80rpx;
                height: 80rpx;
                line-height: 80px;
                text-align: center;
                background-color: #2bb2a7;
                border-radius: 50%;
            }
        }
    }
}